                    <div key={cat} class="skill-category">
                        <h3>{cat}</h3>
                        <ul class="skill-list">
                            {skills
                                .filter((s) => s.category === cat)
                                .map(({ name, icon }) => (
                                    <li key={name} class="skill-item">
                                        <img
                                            src={icon}
                                            alt={`${name} icon`}
                                            loading="lazy"
                                            width="48"
                                            height="48"
                                        />
                                        <span>{name}</span>
                                    </li>
                                ))}
                        </ul>
                    </div>
                ))}
