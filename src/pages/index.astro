                <h2 id="pubs-heading">Publications</h2>
                {publications.map(({ category, items }) => (
                    <div key={category} class="publications-section">
                        <h3>{category}</h3>
                        <ul class="publications-list">
                            {items.map(({ title, year, url }) => (
                                <li key={title} class="publications-item">
                                    <article>
                                        <h4 class="pub-title">{title}</h4>
                                        <p class="pub-year">{year}</p>
                                        <a
                                            href={url}
                                            target="_blank"
                                            rel="noopener noreferrer"
                                            class="pub-link"
                                        >
                                            Read&nbsp;⟶
                                        </a>
                                    </article>
                                </li>
                            ))}
                        </ul>
                    </div>
                ))}
            </section>

        </main>

