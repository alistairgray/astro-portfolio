<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta charset="utf-8" />
		<link href="https://fonts.googleapis.com/css2?family=Karla:wght@400;600&display=swap" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@600&display=swap" rel="stylesheet" />
		<title>Alistair Gray - Technical Writer</title>
	</head>
	<body>

        {/* ==========================================================
        NAV
        The mobile menu toggle logic is REMOVED, this is static HTML.
        ========================================================== */}
        <nav class="navbar" aria-label="Primary">
            <div class="nav-links open">
                <ul class="nav-list">
                    {internalNav.map(({ href, label }) => (
                        <li key={href}>
                            <a href={href}>{label}</a>
                        </li>
                    ))}
                </ul>

                <ul class="nav-actions">
                    {externalNav.map(({ href, label, download }) => (
                        <li key={label}>
                            <a
                                href={href}
                                {...(download ? { download } : {})}
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                {label}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>
        </nav>


        <main>
            {/* ==========================================================
            ABOUT
            ========================================================== */}
            <section id="about" class="content-wrap about">
                <h1>Alistair Gray</h1>
                <h2>Technical Writer ∙ APIs, Cloud & AI</h2>
                <p class="tagline">
                    I translate complex platforms into clear, developer‑ready docs that drive adoption.
                </p>
                <div class="about-item">
                    {/* The internal link is now a simple anchor to the next section */}
                    <a href="#intro-heading" class="button" role="button">
                        Let’s go
                    </a>
                    <a 
                        href="https://github.com/alistairgray" 
                        class="button" 
                        target="_blank" 
                        rel="noopener noreferrer"
                    >
                        See the GitHub
                    </a>
                </div>
            </section>

            {/* ==========================================================
            INTRO 
            ========================================================== */}
            <section id="intro" class="intro content-wrap" aria-labelledby="intro-heading">
                <h2 id="intro-heading">About Me</h2>
                <div class="intro-content">
                    {introSections.map(({ title, body }) => (
                        <div key={title} class="intro-content-block">
                            <h3>{title}</h3>
                            {/* Astro allows simple .map for line breaks like this: */}
                            <p>
                                {body.split('\n').map((line, i) => (
                                    <>
                                        {line}
                                        {i < body.split('\n').length - 1 && <br />}
                                    </>
                                ))}
                            </p>
                        </div>
                    ))}
                </div>
            </section>

            {/* ==========================================================
            COMPANIES
            ========================================================== */}
            <section id="companies" class="companies content-wrap" aria-labelledby="companies-heading">
                <h2 id="companies-heading">Companies</h2>
                <ul class="companies-list">
                    {companies.map(({ name, logo, url }) => (
                        <li key={name} class="companies-item">
                            <a href={url} target="_blank" rel="noopener noreferrer">
                                <img
                                    src={logo}
                                    alt={`${name} logo`}
                                    loading="lazy"
                                    height="60"
                                />
                            </a>
                        </li>
                    ))}
                </ul>
            </section>

            {/* ==========================================================
            EXAMPLES
            ========================================================== */}
            <section id="examples" class="examples content-wrap" aria-labelledby="examples-heading">
                <h2 id="examples-heading">Writing Samples</h2>
                {exampleCategories.map((cat) => (
                    <div key={cat} class="examples-group">
                        <h3>{cat}</h3>
                        <ul class="examples-list">
                            {examples
                                .filter((e) => e.category === cat)
                                .map(({ title, excerpt, url, year }) => (
                                    <li key={title} class="examples-card">
                                        <article>
                                            <header>
                                                <h4>{title}</h4>
                                                <span class="examples-year">{year}</span>
                                            </header>
                                            <p>{excerpt}</p>
                                            {url && (
                                                <a
                                                    href={url}
                                                    target="_blank"
                                                    rel="noopener noreferrer"
                                                    class="examples-link"
                                                >
                                                    Read ⟶
                                                </a>
                                            )}
                                        </article>
                                    </li>
                                ))}
                        </ul>
                    </div>
                ))}
            </section>

            {/* ==========================================================
            SKILLSET (Sourced from alistairgray/portfolio/portfolio-403bdce20cd26630e112b621c0131f35d0618b91/src/components/Skillset.js)
            ========================================================== */}
